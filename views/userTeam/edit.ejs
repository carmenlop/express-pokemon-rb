
<form method='POST' action="/pokemon/edit/<%=pokemonInfo.dataValues.id%>">
	<% pokemons.forEach(pokemon => { %>
		<% if (pokemon.dataValues.id === pokemonInfo.dataValues.id) { %>
			<h3 class="text-capitalize"><%= pokemonInfo.dataValues.name %></h3><br>
			<img src="<%= pokemonInfo.dataValues.imageUrl %>" class="pkImage sprite"><br>
			<p></p>
			<label for="pokemonNotes">Notes</label>
    		<input id="pokemonNotes" type="text" name="pokemonNotes" value="<%= pokemon.usersPokemons.dataValues.note %>">
			<input type="submit" value="Submit Change!">	
		<% } %>	
	<% }) %>
</form>